<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="voidProcessorManager" class="VoidProcessorManager">
        <constructor-arg>
            <list>
                <!-- order of the elements in the list is significant -->
                <bean class="com.smalaca.designpatterns.chainofresponsibility.processors.ConcreteProcessor1"/>
                <bean class="com.smalaca.designpatterns.chainofresponsibility.processors.ConcreteProcessor2"/>
                <bean class="com.smalaca.designpatterns.chainofresponsibility.processors.ConcreteProcessor3"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="breakProcessorManager" class="BreakProcessorManager">
        <constructor-arg>
            <list>
                <!-- order of the elements in the list is significant -->
                <bean class="com.smalaca.designpatterns.chainofresponsibility.processors.ConcreteProcessor1"/>
                <bean class="com.smalaca.designpatterns.chainofresponsibility.processors.ConcreteProcessor2"/>
                <bean class="com.smalaca.designpatterns.chainofresponsibility.processors.ConcreteProcessor3"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="returnProcessorManager" class="ReturnProcessorManager">
        <constructor-arg>
            <list>
                <!-- order of the elements in the list is significant -->
                <bean class="com.smalaca.designpatterns.chainofresponsibility.processors.ConcreteProcessor1"/>
                <bean class="com.smalaca.designpatterns.chainofresponsibility.processors.ConcreteProcessor2"/>
                <bean class="com.smalaca.designpatterns.chainofresponsibility.processors.ConcreteProcessor3"/>
            </list>
        </constructor-arg>
    </bean>
</beans>